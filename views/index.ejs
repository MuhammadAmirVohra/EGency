  <div class="container">
    <div class="properties-listing spacer">
      <a href="/allhouses" class="pull-right viewall">View All Listing</a>
      <h2>Featured Properties</h2>
      <div id="owl-example" class="owl-carousel">
        <% for(var i = 0; i < houses.length; i++) {%>
        <div class="properties">
          <div class="image-holder">
            <img
              src="data:image/jpg; base64, <%= houses[i].Image1 %>"
              class="img-responsive"
              alt="properties"
            />
          </div>
          <h4>
            <a href="/property-detail/<%= houses[i].ID%>"
              ><%= houses[i].Name %></a
            >
          </h4>
          <p class="price">
            Price: Rs. <%=
            houses[i].Price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") %>
          </p>
          <div class="listing-detail">
            <span
              data-toggle="tooltip"
              data-placement="bottom"
              data-original-title="Bed Room"
              ><%= houses[i].Bedroom %></span
            >
            <span
              data-toggle="tooltip"
              data-placement="bottom"
              data-original-title="Living Room"
              ><%= houses[i].Livingroom %></span
            >
            <span
              data-toggle="tooltip"
              data-placement="bottom"
              data-original-title="Parking"
              ><%= houses[i].Parking %></span
            >
            <span
              data-toggle="tooltip"
              data-placement="bottom"
              data-original-title="Kitchen"
              ><%= houses[i].Kitchen %></span
            >
          </div>
          <a class="btn btn-primary" href="/property-detail/<%= houses[i].ID %>"
            >View Details</a
          >
        </div>
        <%}%>
      </div>
    </div>
    <div class="spacer">
      <div class="row">
        <div class="col-lg-12 col-sm-9 recent-view">
          <h3>About Us</h3>
          <p>
